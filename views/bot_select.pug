doctype html
html
  head
    title= "meta.dating 2019: BOTIFY!"
    meta(charset='utf-8')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js')
    script(src='/scripts/bot_select.js')
    script(src='/scripts/jquery.redirect.js')
    //script(src='/scripts/socketClient.js')
    link(rel='stylesheet', href='/stylesheets/css/bot_style.css')
    script(src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.1.0/socket.io.js")
    script(src='https://cdn.jsdelivr.net/npm/js-cookie@2/src/js.cookie.min.js')

  body
    .welcome-container
        .welcome-header
            .welcome-logo
                .welcome-logo-text
                    img(onclick="window.location.href='/'" src="/images/bot_login.png").img--botselect-icon 
        .welcome-button
            .welcome-button-text
                p Bitte w√§hle zwei Bots aus:
        .welcome-bot-container
                each bots in list_bots
                    .welcome-bot-box.klick 
                        .bot-name-description
                            .bot-img    
                                img(src=bots.image_path, height="100" width="100", alt="no picture") 
                            .bot-name
                                p #{bots.name}                                   
                        .bot-description    
                                p #{bots.description}
                        .bot-box-mouse-hover        
                        p#bot-hidden-text #{bots.name}

                else
                    p Es gibt keine Bots  